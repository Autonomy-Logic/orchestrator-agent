FROM python:3.12-alpine

# Install system dependencies:
# - iproute2: network interface management
# - busybox-extras: udhcpc DHCP client
# - util-linux: nsenter for container namespace access
# - eudev: udev implementation for Alpine (required by pyudev for device monitoring)
# - eudev-libs: shared libraries for eudev
RUN apk add --no-cache iproute2 busybox-extras util-linux eudev eudev-libs && \
    pip install --no-cache-dir pyroute2 pyudev

WORKDIR /app

COPY autonomy-netmon.py /app/autonomy-netmon.py
COPY udhcpc-script.sh /usr/share/udhcpc/default.script
RUN chmod +x /usr/share/udhcpc/default.script

ENV PYTHONUNBUFFERED=1

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD test -S /var/orchestrator/netmon.sock || exit 1

ENTRYPOINT ["python", "-u", "/app/autonomy-netmon.py"]
