FROM python:3.12-slim

# Install system dependencies:
# - iproute2: network interface management (ip command)
# - udhcpc: lightweight DHCP client for container vNICs
# - procps: process utilities (for debugging)
# Note: Debian slim already includes libudev for pyudev support
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        iproute2 \
        udhcpc \
        procps \
    && rm -rf /var/lib/apt/lists/* && \
    pip install --no-cache-dir pyroute2 pyudev

WORKDIR /app

COPY autonomy-netmon.py /app/autonomy-netmon.py
COPY udhcpc-script.sh /usr/share/udhcpc/default.script
RUN chmod +x /usr/share/udhcpc/default.script

ENV PYTHONUNBUFFERED=1

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD test -S /var/orchestrator/netmon.sock || exit 1

ENTRYPOINT ["python", "-u", "/app/autonomy-netmon.py"]
